
@model Tuple<TodoList.Models.Entites.Todo, List<TodoList.Models.Entites.Todo>>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers**
@{
    var todoItem = @Model;
 }
<h1> Yeni liste ekle</h1>
@Html.Partial("~/Views/Todo/Create.cshtml")

<form asp-controller="Todo" asp-action="Index" method="post">
    @DateTime.Now.ToShortDateString()
    <table class="table">
        <tr>

            <th>LİSTE KODU</th>
            <th>BAŞLIK</th>
            <th>OLUŞTURMA TARİHİ</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model.Item2)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    <a asp-action="Index" asp-controller="TodoItem" asp-route-id="@item.Id">
                        @item.Name
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTime)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Güncelle</a> |
                    <a  asp-action="Delete" asp-route-id="@item.Id">Sil</a>|
                </td>
            </tr>
        }
    </table>
</form>